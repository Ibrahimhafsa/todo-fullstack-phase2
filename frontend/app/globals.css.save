@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Dark backgrounds */
  --bg-dark: #0a0a0a;
  --bg-elevated: #1a1a2e;
  --bg-glass: rgba(26, 26, 46, 0.6);

  /* Accent colors - teal/cyan glow */
  --accent: #00d4ff;
  --accent-hover: #00b4d8;
  --accent-muted: #0077b6;
  --accent-glow: rgba(0, 212, 255, 0.3);

  /* Text colors */
  --text-primary: #ffffff;
  --text-secondary: #a0a0a0;
  --text-muted: #6b7280;

  /* Status colors */
  --success: #10b981;
  --danger: #ef4444;
  --warning: #f59e0b;

  /* Borders */
  --border-subtle: rgba(255, 255, 255, 0.1);
  --border-accent: rgba(0, 212, 255, 0.3);

  /* Shadows */
  --shadow-glow: 0 0 20px rgba(0, 212, 255, 0.3);
  --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.3);

  /* Legacy vars for compatibility */
  --background: #0a0a0a;
  --foreground: #ededed;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

/* Base styles */
body {
  background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-elevated) 100%);
  color: var(--text-primary);
  font-family: var(--font-sans), system-ui, -apple-system, sans-serif;
  min-height: 100vh;
}

/* Utility classes for theme */
.glass-card {
  background: var(--bg-glass);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--border-subtle);
  border-radius: 1rem;
}

.glow-effect {
  box-shadow: var(--shadow-glow);
}

.text-accent {
  color: var(--accent);
}

.bg-accent {
  background-color: var(--accent);
}

/* Focus states */
.focus-ring {
  outline: none;
}

.focus-ring:focus {
  box-shadow: 0 0 0 2px var(--bg-dark), 0 0 0 4px var(--accent-muted);
}

/* Smooth transitions */
.transition-all-smooth {
  transition: all 0.2s ease-in-out;
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-dark);
}

::-webkit-scrollbar-thumb {
  background: var(--accent-muted);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent);
}
